<h3>{{ heading_title }}</h3>
<div id="related{{ module }}" class="carousel slide{% if effect == 'fade' %} carousel-fade{% endif %}" data-bs-ride="carousel">
	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4">
		{% for product in products %}
			<div class="col">{{ product }}</div>
		{% endfor %}
	</div>
	{% if controls and products|batch(items)|length > 1 %}
		<a href="#related{{ module }}" class="carousel-control-prev" data-slide="prev"><span class="fas fa-chevron-left"></span></a> <a href="#related{{ module }}" class="carousel-control-next" data-slide="next"><span class="fas fa-chevron-right"></span></a>
	{% endif %}
</div>
<script type="text/javascript">
$('#related{{ module }}').carousel({
  ride: 'carousel',
  interval: {{ interval|escape('js') }},
  wrap: true
});
</script>